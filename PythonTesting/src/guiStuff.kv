<WidgetExample>:
	cols:3
	ToggleButton:
		#text:"toggle"
		text:"OFF"
		#pass self because you want the state of the button
		on_state: root.onToggleButton(self)
		size_hint: None,1
		width:"100dp"
	Button:
		text:"Click Here"
		#have to use root instead of self. 
		#Self would refer to the button not the widget
		
		disabled: not root.countEnabled
		
		on_press: root.onButtonClick()
		
	Label:
		#text:"You clicked the button"
		text:root.myText
		font_size: "100dp"
		font_name: "../fonts/Lcd.ttf"
		
		color: utils.get_color_from_hex("#7a0ff0")
	Switch:
		on_active: root.switchOnOff(self)
		size_hint: None,1
		width:"100dp"
	Slider:
		#orientation:"vertical"
		min:0
		max:10
		value:5
		step:1
		on_value:root.sliderValue(self)
	Label:
		#text: "Slider Value"
		text: root.sliderValueText
		font_name: "../fonts/PaletteMosaic-Regular.ttf"
		font_size: "100dp"
		color: utils.get_color_from_hex("#ecd013")
	TextInput:
		size_hint: None,1
		width:"100dp"
		text:"Type something"
		#multiline: False
		id: myTextInput
		#on_text_validate: root.onTextValidate(self)
		
	Label:
		text:myTextInput.text
		#text:"Your name is: "+root.myTextBoxInput
		
<PageLayoutEx@PageLayout>:
