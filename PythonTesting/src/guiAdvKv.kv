#:set varName dp(75)
			
<CanvasExample1>:
	canvas:
		Rectangle:
			pos:dp(100),dp(100)
			#pos:self.center
			#pos:self.center_x-100/2,self.center_y-100/2
			#size:dp(150),dp(100)
			size:100,100
		Ellipse:
			pos:self.center_x-varName/2,self.center_y-varName/2
			#pos:self.center
			size:varName,varName
		Line:
			points:(0,0,100,100,200,0,self.width,self.height)
			#points: (0,0,100,100,200,0, self.width, self.height)
		Line:
			points:(0,0,self.width/4,self.height/2,self.width/2,0,self.width*3/4,self.height/2,self.width,0)
			width:5
			
<CanvasExample2>:
	canvas:
		Color:
			rgb:0,1,0
			#rgba: 0,1,0,.5
		Line:
			#circle:(x coord of center,y coord of center,radius)
			circle: (150, 150, 100)
			width:2
		Color:
			rgb:0,0,1
			rgba: 0,0,1,.25
		Line:
			#ellipse:(x coord of center,y coord of center,radius x, radius y)
			ellipse: (300,300,100,200)
			width:5
		Line:
			#rectangle: (x coord, y coord, width, height)
			rectangle:(self.width/5,200,100,50)
			width:3
		
		
		

